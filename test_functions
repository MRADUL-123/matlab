function val = testfunctions(x, choice)
% FUNCTIONS: returns value of selected test function
% x → input vector, choice → number (1–10)

switch choice
    % ----- Unimodal Functions -----
    case 1  % Sphere
        val = sum(x.^2);

    case 2  % Rosenbrock
        val = sum(100*(x(2:end)-x(1:end-1).^2).^2 + (1-x(1:end-1)).^2);

    case 3  % Zakharov
        n = numel(x);
        val = sum(x.^2) + (0.5*(1:n)*x').^2 + (0.5*(1:n)*x')^4;

    case 4  % Sum Squares
        n = numel(x);
        val = sum((1:n)'.*x'.^2);

    case 5  % Booth
        val = (x(1)+2*x(2)-7)^2 + (2*x(1)+x(2)-5)^2;

    % ----- Multimodal Functions -----
    case 6  % Rastrigin
        val = 10*numel(x) + sum(x.^2 - 10*cos(2*pi*x));

    case 7  % Ackley
        val = -20*exp(-0.2*sqrt(mean(x.^2))) - exp(mean(cos(2*pi*x))) + 20 + exp(1);

    case 8  % Griewank
        val = sum(x.^2)/4000 - prod(cos(x./sqrt(1:numel(x)))) + 1;

    case 9  % Schwefel
        val = 418.9829*numel(x) - sum(x.*sin(sqrt(abs(x))));

    case 10 % Michalewicz
        m = 10;
        val = -sum(sin(x).* (sin(((1:numel(x)).*x.^2)/pi)).^(2*m));
end
end
